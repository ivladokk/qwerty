
@{
    ViewBag.Title = "Teams";
}

<h2>Teams</h2>
<br />
<a href="/Teams/Create/" class="btn btn-primary btn-lg active" role="button">Create New</a>
<br />
<table class="table table-hover">
    <tr>
        <td>
            <p>ID</p>
        </td>
        <td>
            <p>TeamName</p>
        </td>
        <td></td>
    </tr>
    @foreach (var t in ViewBag.Teams)
    {
        <tr>
            <td><p>@t.ID</p></td>
            <td><p>@t.TeamName</p></td>
            <td><p><a href="/Teams/Edit/@t.ID">Edit</a></p></td>
        </tr>
    }
</table>
