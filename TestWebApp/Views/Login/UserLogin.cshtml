@model DBModels.User

@{
    Layout = null;
}

@if (Model != null)
{
    <div class="dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            @Model.UserName
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            @Html.ActionLink("My projects", "Index", "Projects", new { area = "" }, new { @class = "dropdown-item" })
            @Html.ActionLink("My tasks", "Index", "Tasks", new { area = "" }, new { @class = "dropdown-item" })
            <div class="dropdown-divider"></div>
            @Html.ActionLink("Logout", "Logout", "Login", new { area = "" }, new { @class = "dropdown-item" })
        </div>
    </div>
}
else
{
    @Html.ActionLink("LogIn", "Index", "Login", new { area = "" }, new { @class = "nav-link" })
}

